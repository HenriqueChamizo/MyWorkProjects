@model GedScannerMVC.ClassView.Listas

<select id="ddlConta" name="conta" class="form-control" onchange="onChangeIdConta();" onload="onLoadContaDDL()" @(Model.disabled ? "disabled='disabled'" : "")>
    @if (Model.contas.Count > 0)
    {
        <option value="-1">Selectione...</option>
        if (Model.conta != 0)
        {
            foreach (Model.Conta conta in Model.contas)
            {
                if (Model.conta == conta.CONT_IND)
                {
                    <option value="@conta.CONT_IND" selected>@conta.CONT_ACESSO - @conta.CONT_DESCRICAO</option>
                }
                else
                {
                    <option value="@conta.CONT_IND">@conta.CONT_ACESSO - @conta.CONT_DESCRICAO</option>
                }
            }
        }
        else
        {
            foreach (Model.Conta conta in Model.contas)
            {
                <option value="@conta.CONT_IND">@conta.CONT_ACESSO - @conta.CONT_DESCRICAO</option>
            }
        }
    }
    else
    {
        <option value="-1">Vazio</option>
    }
</select>
<label for="ddlConta">Contas </label>
