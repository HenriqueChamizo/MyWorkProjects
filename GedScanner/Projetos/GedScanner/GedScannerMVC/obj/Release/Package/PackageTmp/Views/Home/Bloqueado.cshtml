@model GedScannerMVC.ClassView.CookieLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GED - Login</title>
    <link rel="icon" href="@Url.Content("~/Image/Logo/ged1-so-red.png")">

    <link href="@Url.Content("~/Styles/Login.hcc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/bootstrap/css/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Styles/INPUTHENRIQUE.css")" rel="stylesheet" />

    <script src="@Url.Content("~/plugins/jQuery/jquery-2.2.3.min.js")"></script>
    <script src="@Url.Content("~/bootstrap/js/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/INPUTHENRIQUE.js")"></script>

    @*<script src="@Url.Content("~/bootstrap/js/npm.js")"></script>*@
    @*<script src="@Url.Content("~/Scripts/Login.hcc.js")"></script>*@

    <link href="@Url.Content("~/Styles/Particles.css")" rel="stylesheet">
    <script type="text/javascript" src="@Url.Content("~/Scripts/Particles.js")"></script>
</head>
<body>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-control-group" }))
    {
        @Html.ValidationSummary(true)
        <div class="container">
            <div class="card-particles card-container">
                <img id="profile-img" class="profile-img-card" src="@Url.Content("~/Image/Logo/ged1-red.png")" />
                <p id="profile-name" class="profile-name-card"></p>
                <form id="form1" runat="server" class="form-signin">
                    <span id="reauth-email" class="reauth-email"></span>
                    <div id="upLogin">
                        <div id="panelLogin">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div style="border-radius: 100px;background-clip: padding-box;display: block;height: 100px;margin: 0 auto;width: 100px; background-color:lightgray;">
                                        <img src="@Url.Content("~/Image/Icones/User1-gray.png")" style="width: 100%;" />
                                        <br />
                                    </div>
                                    <div style="width:100%;float:left">
                                        <h3 class="h3 text-center">@Model.LOGI_NOME</h3>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group" style="display:none">
                                        <input id="inputEmail" class="form-control" type="text" name="email" autocomplete="off" value="@Model.LOGI_EMAIL" />
                                        <label id="labelEmail" for="inputEmail">Usuário (Email)</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="inputPassword" class="form-control" type="password" name="senha" />
                                        <label id="labelPassword" for="inputPassword">Senha</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <input id="btnEntrar" class="btn btn-lg btn-primary btn-block btn-signin" value="Entrar" type="submit" />
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <a href="@Url.Action("Sair", "Home")" class="btn btn-link">Trocar de usuário</a>
                            </div>
                        </div>
                    </div>
                </form><!-- /form -->
            </div><!-- /card-container -->
        </div>
    }

    <div id="particles-js"></div>
</body>
</html>

